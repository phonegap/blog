<?xml version="1.0" encoding="UTF-8"?>
<posts>{% assign counter = 0 %}{% for post in site.posts %}{% if counter < 2 %}{% assign counter=counter | plus:1 %}<post><datetime>{{ post.date | date: '%Y-%m-%dT%H:%M:%SZ'}}</datetime><title>{{ post.title }}</title><url>{% if post.link %}{{ post.link }}{% else %}{{ post.url }}{% endif %}</url><description>{% if post.format == 'html' %}{{ post.content | strip_html | truncatewords: 20 }}{% else %}{{ post.content | markdown | strip_html | truncatewords: 20 }}{% endif %}</description></post>{% endif %}{% endfor %}</posts>
